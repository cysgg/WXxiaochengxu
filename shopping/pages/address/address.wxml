<!-- pages/address/address.wxml -->
<view class="main">
    <view class="form-box">
        <form bindsubmit="forSubmit" >
            <input type="text" name="" placeholder="姓名" id="" data-type="name" bindinput="bindValue" />
            <input type="number" value="{{address.phone}}" data-type="phone" placeholder="电话号码" bindinput="bindValue" />
            <input value="{{address.detail}}" data-type="detail" placeholder="详细地址" bindinput="bindValue" />
            <button form-type="submit">保存</button>
        </form>
    </view>
</view>