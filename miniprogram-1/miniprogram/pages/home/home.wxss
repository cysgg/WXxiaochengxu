.container{
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    font-size: 0;
}

.container_bg{
    position: absolute;
    width: 100%;
    height: 100%;
}

.container_bg .home_pag{
    width: 100%;
    height: 100%;
}
.container_con{
    position: absolute;
    width: 100%;
    height: 100%;
}

.userview{
    position: absolute;
    top: 40rpx;
    padding: 40rpx;
}

.left{
    left: 0;
    text-align: left;
}

.right{
    right: 0;
    text-align: right;
}

.userimg{
    width: 90rpx;
    height: 90rpx;
    border-radius: 100%;
    border: 1px solid #e5e5e5;
    overflow: hidden;
}

.userimg image{
    width: 90rpx;
    height: 90rpx;
}

.username{
    font-size: 26rpx;
    color: #fff;
    line-height: 80rpx;
}

.userweather{
    font-size: 26rpx;
    color: #fff;
}

.container_title{
    width: 191rpx;
    position: absolute;
    color: #fff;
    font-size: 38rpx;
    top: 80rpx;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    line-height: 50rpx;
}

.loved_time span{
    font-size: 50rpx;
}

.scroll_area{
    width: 86%;
    height: 140rpx;
    border-radius: 10rpx;
    position: absolute;
    bottom: 40rpx;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(255,255,255,.6);
    overflow-x: hidden;
    padding: 20rpx;
    white-space: nowrap;
    z-index: 1;
}

.scroll-view{
    width: auto;
    overflow: hidden;
    display: flex;
    justify-content: space-around;
}
.scroll-view-item{
    width: 160rpx;
    height: 140rpx;
    display: inline-block;
    overflow: hidden;
}

.scroll_item_img{
    width: 100rpx;
    height: 100rpx;
    display: block;
    margin: 0 auto;
}

.scroll_item_text{
    width: 160rpx;
    display: inline-block;
    text-align: center;
    font-size: 26rpx;
    line-height: 40rpx;
}

.popbox{
    position: absolute;
    width: 100%;
    height: 100%;
    display: none;
}

.active{
    display: block;
}

.popbox_bg{
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.4);
    z-index: 2;
}

.popbox_inner{
    width: 100%;
    top: 16%;
    height: 780rpx;
    position: relative;
    overflow: hidden;
}

.popbox_content{
    position: absolute;
    left: 50%;
    transform: translate(-50%,0);
    z-index: 3;
    width: 86%;
    border-radius: 12rpx;
    background-color: #fff;
    overflow: hidden;
}
.fadeIn{
    animation: fadeIn .2s ease-in-out 1;
}
.fadeOut{
    animation: fadeOut .2s ease-in-out 1 forwards;
}
.hidanm{
    animation: hid .4s ease-in-out .2s 1;
}

.popbox_header{
    position: relative;
    width: 100%;
    height: 220rpx;
    overflow: hidden;
}
.header_bg{
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.header_bg image{
    width: 110%;
    height: 110%;
    transform: translate(-5%, -5%);
    filter: blur(15rpx);
}
.header_con{
    position: absolute;
    width: 100%;
    height: 100%;
}

.header_title{
    width: 100%;
    text-align: center;
    font-size: 38rpx;
    color: #fff;
    line-height: 140rpx;
}
.header_title span{
    font-size: 50rpx;
}

.header_btns{
    width: 70%;
    height: 60rpx;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    color: #fff;
    padding: 4rpx 10rpx;
}

.popbox_btn{
    border: 1px solid #fff;
    border-radius: 8rpx;
    font-size: 22rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    padding: 2rpx 10rpx;
}

.popbox_body{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    overflow: hidden;
    color: #999999;
}

.list_item{
    width: 100%;
    font-size: 28rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 20rpx;
}

.list_item span{
    color: red;
    font-size: 32rpx;
}

.popbox_body_title{
    font-size: 24rpx;
    line-height: 80rpx;
    text-align: center;
    background-color: #fdfdfd;
}

@keyframes fadeIn{
    0%{
        transform:  translate(-50%,-101%);
    }
    100%{
        transform:  translate(-50%,0);
    }
}

@keyframes fadeOut{
    0%{
        transform:  translate(-50%,0%);
    }
    100%{
        transform:  translate(-50%,101%);
    }
}

@keyframes hid{
    0%{
        background-color: rgba(0,0,0,.4);
    }
    100%{
        background-color: rgba(0,0,0,0);
    }
}