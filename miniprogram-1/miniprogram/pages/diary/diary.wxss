/* pages/diary/diary.wxss */
.main{
    width: 100%;
    height: 100%;
}
.container{
    background-color: #fff;
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: auto;
    box-sizing: border-box;
}
.items{
    display: flex;
    flex-direction: column;
    width: 100%;

}
.item{
    box-sizing: border-box;
    padding: 10rpx 60rpx 40rpx 40rpx;
    width: 100%;
    min-height: 200rpx;
    border-bottom: 1rpx solid #fafafa;
}
.header{
    width: 100%;
    height: 60rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.header .header_image{
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    overflow: hidden;
}
.header .header_image image{
    width: 60rpx;
    height: 60rpx;
    margin: -10rpx 0 0 -10rpx;
}
.header text{
    font-size: 24rpx;
    color: #999;
    padding: 20rpx;
}
.content{
    font-size: 32rpx;
    color: #000;
    text-align: left;
    line-height: 50rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    font-weight: 400;
}

.fixedbox{
    position: fixed;
    bottom: 80rpx;
    right: 40rpx;
    width: 60rpx;
    height: 60rpx;
    background-color: #EE3B5C;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: hidden;
    box-shadow: 0 0 8rpx #000;
}
.addbox{
    padding: 10rpx;
    width: 40rpx;
    height: 40rpx;

}
.addbox image{
    width: 40rpx;
    height: 40rpx;
}
.addbox_hover{
    opacity: .4;
}