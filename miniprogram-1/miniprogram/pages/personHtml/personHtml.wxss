/* pages/personHtml/personHtml.wxss */
.container{
    font-size: 0;
    width: 100%;
    height: 100%;
}

.container_top{
    padding: 40rpx 0;
}

.flex_column{
    display: flex;
    flex-direction: column;
    width: 100%;
}

.flex_row{
    display: flex;
    width: 100%;
}

.item_space{
    justify-content: space-between;
    align-items: center;
}

.flex_item:active {
    background-color: inherit;
}

.flex_item{
    box-sizing: border-box;
    padding: 36rpx;
    width: 100%;
    background-color: #fff;
    color: #000;
    font-size: 28rpx;
}
.img_item{
    height: 125rpx;
}
.item_img{
    width: 100rpx;
    height: 100rpx;
    float: left;
}
.item_img_mt{
    margin-top: 50rpx;
}

.for_right{
    width: 10rpx;
    height: 10rpx;
    display: inline-block;
    border: 1px solid #999999;
    transform: rotateZ(45deg);
    border-width: 1px 1px 0 0;
}

.flex_item view:nth-child(2){
    color: #999999;
}


.container_btn{
    padding: 40rpx 0;
}